<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#8BC34A"
    tools:context=".InterfazDesp">

    <TextView
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:id="@+id/contadordesp"
        android:layout_width="600dp"
        android:text="30"
        android:textColor="@color/primary"
        android:layout_height="match_parent" />
    <TextView
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:text="120"
        android:id="@+id/relojdesp"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/contadordesp"/>
    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_below="@+id/relojdesp"
        android:layout_toRightOf="@+id/contadordesp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/desplazamientos1"/>

            <TextView
                android:id="@+id/titulosentadillas"
                android:gravity="top|center"
                android:textColor="@color/primary_dark_material_dark"
                android:textSize="25sp"
                android:text="DESPLAZAMIENTOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:background="#388E3C"
                android:id="@+id/btnsalirdespla"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TERMINAR EJERCICIO"/>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>