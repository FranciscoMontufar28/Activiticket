<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:gravity="bottom|center"
    android:background="@drawable/instruccionessent"
    tools:context=".InstruccionesSent">

    <Button
        android:background="#388E3C"
        android:id="@+id/btncontinuarsent"
        android:text="CONTINUAR"
        android:drawableLeft="@drawable/ic_check_black_36dp"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <Button
        android:drawableLeft="@drawable/ic_window_close"
        android:background="#D32F2F"
        android:id="@+id/btncancelarsent"
        android:text="CANCELAR"
        android:layout_width="300dp"
        android:layout_height="50dp" />

</LinearLayout>