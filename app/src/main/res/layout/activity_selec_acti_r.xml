<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="150dp"
    android:orientation="vertical"
    android:gravity="center|left"
    android:background="@drawable/menuprincipal"
    tools:context=".SelecActiR">

    

    <TextView
        android:id="@+id/nombreusuarioSA"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:text="NOMBRE USUARIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|left"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:textSize="20sp"
            android:id="@+id/sentadillasR"
            android:text="SENTADILLAS"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#0288D1"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/desplazamientosR"
            android:text="Desplazamientos"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="#388E3C"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_gravity="center|left"
            android:textSize="20sp"
            android:id="@+id/aleatorioR"
            android:text="ACTIVIDAD ALEATORIA"
            android:background="#FF9800"
            android:layout_width="450dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/homeR"
            android:layout_width="450dp"
            android:layout_height="110dp"
            android:src="@drawable/botoninicio"
            android:layout_gravity="center_horizontal|left"/>

    </LinearLayout>

</LinearLayout>