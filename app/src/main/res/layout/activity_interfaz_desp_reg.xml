<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#009688"
    tools:context=".InterfazDespReg">
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:id="@+id/nombreusuarioDesp"
        android:textColor="#000000"
        android:text="NOMBRE USUARIO"
        android:layout_width="600dp"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:id="@+id/contadordespr"
        android:layout_width="600dp"
        android:text="30"
        android:textColor="#000000"
        android:layout_height="match_parent" />
    <TextView
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Display4"
        android:text="120"
        android:id="@+id/relojdespr"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/contadordespr"/>
    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_below="@+id/relojdespr"
        android:layout_toRightOf="@+id/contadordespr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/desplazamientos1"/>

            <TextView
                android:id="@+id/titulosentadillas"
                android:gravity="top|center"
                android:textColor="@color/primary_dark_material_dark"
                android:textSize="25sp"
                android:text="DESPLAZAMIENTOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:background="#B2EBF2"
                android:id="@+id/btnsalirdespR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TERMINAR EJERCICIO"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>